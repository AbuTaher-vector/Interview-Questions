Leetcode : https://leetcode.com/problems/valid-parentheses/description/
Code : 
class Solution {
public:
    bool isValid(string s) {
        stack<char>st;
        for(auto x:s){
            if(x == '{' || x == '(' || x == '[') st.push(x);
            else{
                if(st.empty()) return false;
                else{
                    if(x == ')' && st.top() == '(') st.pop();
                    else if(x == '}' && st.top() == '{') st.pop();
                    else if(x == ']' && st.top() == '[') st.pop();
                    else return false;
                }
            }
        }
        if(st.empty()) return true;
        else return false;
        
    }
};

GeeksfoGeeks : https://practice.geeksforgeeks.org/problems/parenthesis-checker2744/1?page=1&company[]=Amazon&category[]=Strings&sortBy=submissions
Code : 
class Solution
{
    public:
    //Function to check if brackets are balanced or not.
    bool ispar(string s)
    {
        stack<char>st;
        for(auto x:s){
            if(x == '{' || x == '(' || x == '[') st.push(x);
            else{
                if(st.empty()) return false;
                else{
                    if(x == ')' && st.top() == '(') st.pop();
                    else if(x == '}' && st.top() == '{') st.pop();
                    else if(x == ']' && st.top() == '[') st.pop();
                    else st.push(x);
                }
            }
        }
        if(st.empty()) return true;
        else return false;
    }
}
